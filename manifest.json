{
  "manifest_version": 3,
  "name": "後で読む",
  "version": "1.0.0",
  "description": "記事を保存して、読みたい時に通知でお知らせします",

  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "contextMenus",
    "activeTab",
    "scripting"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "後で読む"
  },

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "chrome_url_overrides": {
    "newtab": "newtab/newtab.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
